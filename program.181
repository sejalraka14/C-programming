#include <stdio.h>
float avg(int arr[], int n){
    int sum = 0;
    for(int i=0;i<n;i++) sum += arr[i];
    return (float)sum/n;
}
int main(){
    int s[5], min;
    printf("Enter 5 sensor readings: ");
    for(int i=0;i<5;i++){
        scanf("%d",&s[i]);
        if(i==0 || s[i]<min) min=s[i];
    }
    printf("Average = %.2f, Minimum = %d", avg(s,5), min);
    return 0;
}
