        case 1: printf("Robot is in IDLE mode."); break;
        case 2: printf("Robot is in ACTIVE mode."); break;
        case 3: printf("Robot in ERROR mode!"); break;
        default: printf("Invalid Mode!");
    }
    getch();
}
