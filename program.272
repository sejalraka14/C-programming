        case 1: printf("Red LED ON - Warning Mode."); break;
        case 2: printf("Green LED ON - Normal Mode."); break;
        case 3: printf("Blue LED ON - Night Mode."); break;
        default: printf("Invalid LED selection!");
    }
    getch();
}
