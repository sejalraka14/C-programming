#include<stdio.h>
#include<conio.h>
void main()
{
    int n, i, evenSum=0, oddSum=0;
    clrscr();
    printf("Enter n: ");
    scanf("%d", &n);
    for(i=1; i<=n; i++)
    {
        if(i % 2 == 0)
            evenSum += i;
        else
            oddSum += i;
    }
    printf("Difference (Even - Odd) = %d", evenSum - oddSum);
    getch();
}
