#include<stdio.h>
#include<conio.h>
void main()
{
    int a[100], n, i;
    float div;
    clrscr();
    printf("Enter size of array: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for(i=0; i<n; i++)
        scanf("%d", &a[i]);

    div = a[0];
    for(i=1; i<n; i++)
        if(a[i] != 0)
            div /= a[i];
        else
        {
            printf("Division by zero encountered!");
            getch();
            return;
        }
    printf("Division of array elements = %.2f", div);
    getch();
}
