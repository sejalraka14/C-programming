#include<stdio.h>
#include<conio.h>
void main()
{
    int marks[3], weights[3], i;
    int sum=0, totalWeight=0;
    float wAvg;
    clrscr();
    printf("Enter marks of 3 subjects:\n");
    for(i=0; i<3; i++)
        scanf("%d", &marks[i]);
    printf("Enter corresponding weights:\n");
    for(i=0; i<3; i++)
        scanf("%d", &weights[i]);
    for(i=0; i<3; i++)
    {
        sum += marks[i] * weights[i];
        totalWeight += weights[i];
    }
    wAvg = (float)sum / totalWeight;
    printf("Weighted Average = %.2f", wAvg);
    getch();
}
