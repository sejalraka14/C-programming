#include<stdio.h>
#include<conio.h>
void main()
{
    int n, i, sum=0, count=0;
    float avg;
    clrscr();
    printf("Enter n: ");
    scanf("%d", &n);
    for(i=2; i<=n; i+=2)
    {
        sum += i;
        count++;
    }
    if(count != 0)
    {
        avg = (float)sum / count;
        printf("Average of even numbers = %.2f", avg);
    }
    else
        printf("No even numbers found!");
    getch();
}
