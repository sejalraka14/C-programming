#include<stdio.h>
#include<conio.h>
void main()
{
    int a[100], n, i;
    float sum=0, avg;
    clrscr();
    printf("Enter size of array: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for(i=0; i<n; i++)
    {
        scanf("%d", &a[i]);
        sum += a[i];
    }
    if(n != 0)
    {
        avg = sum / n;
        printf("Average of array elements = %.2f", avg);
    }
    else
        printf("No elements entered!");
    getch();
}
