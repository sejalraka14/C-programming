#include <stdio.h>
float average(int a[], int n) {
    int sum = 0;
    for(int i = 0; i < n; i++)
        sum += a[i];
    return (float)sum / n;
}
int main() {
    int sensor[5];
    printf("Enter 5 sensor readings: ");
    for(int i = 0; i < 5; i++)
        scanf("%d", &sensor[i]);
    printf("Average Reading = %.2f", average(sensor, 5));
    return 0;
}
