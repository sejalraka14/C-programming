#include <stdio.h>
#include <stdlib.h>
float avg(int *arr,int n){
    int sum=0;
    for(int i=0;i<n;i++) sum+=arr[i];
    return (float)sum/n;
}
int main(){
    int n; 
    printf("Enter number of readings: ");
    scanf("%d",&n);
    int *a = (int*)malloc(n*sizeof(int));
    for(int i=0;i<n;i++) scanf("%d",&a[i]);
    printf("Average Reading = %.2f", avg(a,n));
    free(a);
    return 0;
}
