        case 1: printf("Indoor Mode: sensors calibrated."); break;
        case 2: printf("Outdoor Mode: high-brightness vision active."); break;
        case 3: printf("Water-Resistant Mode enabled."); break;
        default: printf("Invalid Environment Mode!");
    }
    getch();
}
