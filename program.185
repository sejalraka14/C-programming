#include <stdio.h>
float weightedAvg(int a[],int n){
    int sum=0,weightSum=0;
    for(int i=0;i<n;i++){
        sum+=a[i]*(i+1);
        weightSum+=(i+1);
    }
    return (float)sum/weightSum;
}
int main(){
    int s[4];
    printf("Enter 4 readings: ");
    for(int i=0;i<4;i++) scanf("%d",&s[i]);
    printf("Weighted Average = %.2f", weightedAvg(s,4));
    return 0;
}
