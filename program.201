#include <stdio.h>
int main(){
    int s[6];
    printf("Enter 6 readings: ");
    for(int i=0;i<6;i++) scanf("%d",&s[i]);
    printf("Average of pairs:\n");
    for(int i=0;i<6;i+=2){
        float avg = (s[i] + s[i+1]) / 2.0;
        printf("Pair %d-%d Avg = %.2f\n", i+1, i+2, avg);
    }
    return 0;
}
