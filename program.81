#include<stdio.h>
#include<conio.h>
void main()
{
    int n, sum=0, count=0, digit;
    float avg;
    clrscr();
    printf("Enter a number: ");
    scanf("%d", &n);
    while(n > 0)
    {
        digit = n % 10;
        sum += digit;
        count++;
        n /= 10;
    }
    if(count != 0)
    {
        avg = (float)sum / count;
        printf("Average of digits = %.2f", avg);
    }
    else
        printf("No digits to average!");
    getch();
}
