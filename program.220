#include <stdio.h>
int main(){
    int choice, a[3];
    printf("Select Sensor Type:\n1. Temperature\n2. Pressure\n3. Humidity\nEnter choice: ");
    scanf("%d",&choice);
    printf("Enter 3 readings: ");
    for(int i=0;i<3;i++) scanf("%d",&a[i]);
    float avg = (a[0]+a[1]+a[2])/3.0;
    switch(choice){
        case 1: printf("Average Temperature = %.2f Â°C", avg); break;
        case 2: printf("Average Pressure = %.2f Pa", avg); break;
        case 3: printf("Average Humidity = %.2f %%", avg); break;
        default: printf("Invalid choice!");
    }
    return 0;
}
