#include <stdio.h>
float avgOdd(int arr[], int n){
    int sum=0,count=0;
    for(int i=0;i<n;i++)
        if(arr[i]%2!=0){ sum+=arr[i]; count++; }
    return count? (float)sum/count : 0;
}
int main(){
    int a[6];
    printf("Enter 6 readings: ");
    for(int i=0;i<6;i++) scanf("%d",&a[i]);
    printf("Average of odd values = %.2f", avgOdd(a,6));
    return 0;
}
