#include<stdio.h>
#include<conio.h>
void main()
{
    int n, i, num, posSum=0, negSum=0, posCount=0, negCount=0;
    float posAvg, negAvg;
    clrscr();
    printf("Enter how many numbers: ");
    scanf("%d", &n);
    for(i=1; i<=n; i++)
    {
        printf("Enter number %d: ", i);
        scanf("%d", &num);
        if(num >= 0)
        {
            posSum += num;
            posCount++;
        }
        else
        {
            negSum += num;
            negCount++;
        }
    }
    if(posCount != 0)
        posAvg = (float)posSum / posCount;
    if(negCount != 0)
        negAvg = (float)negSum / negCount;
    printf("Average of positive numbers = %.2f\n", posCount ? posAvg : 0);
    printf("Average of negative numbers = %.2f", negCount ? negAvg : 0);
    getch();
}
