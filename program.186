#include <stdio.h>
void sort(int a[],int n){
    for(int i=0;i<n-1;i++)
        for(int j=i+1;j<n;j++)
            if(a[i]>a[j]){
                int t=a[i]; a[i]=a[j]; a[j]=t;
            }
}
float avg(int a[],int n){
    int sum=0;
    for(int i=0;i<n;i++) sum+=a[i];
    return (float)sum/n;
}
int main(){
    int s[5];
    printf("Enter 5 readings: ");
    for(int i=0;i<5;i++) scanf("%d",&s[i]);
    sort(s,5);
    printf("Average after sorting = %.2f", avg(s,5));
    return 0;
}
