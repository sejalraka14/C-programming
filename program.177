#include <stdio.h>
float avgEven(int arr[], int n) {
    int sum = 0, count = 0;
    for(int i = 0; i < n; i += 2) {
        sum += arr[i];
        count++;
    }
    return (float)sum / count;
}
int main() {
    int s[6];
    printf("Enter 6 readings: ");
    for(int i = 0; i < 6; i++) scanf("%d", &s[i]);
    printf("Average of even index readings = %.2f", avgEven(s, 6));
    return 0;
}
