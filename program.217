#include <stdio.h>
float calcAvg(int a[], int n){
    int s=0;
    for(int i=0;i<n;i++) s+=a[i];
    return (float)s/n;
}
int main(){
    int s[5];
    float (*ptr)(int[],int) = calcAvg;
    printf("Enter 5 readings: ");
    for(int i=0;i<5;i++) scanf("%d",&s[i]);
    printf("Average = %.2f", (*ptr)(s,5));
    return 0;
}
