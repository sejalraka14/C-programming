#include <stdio.h>
float avg(int a[], int n){
    int sum = 0;
    for(int i=0;i<n;i++) sum += a[i];
    return (float)sum / n;
}
int main(){
    int s[5];
    printf("Enter 5 readings: ");
    for(int i=0;i<5;i++) scanf("%d",&s[i]);
    float mean = avg(s,5);
    int high=0, low=0, ch=0, cl=0;
    for(int i=0;i<5;i++){
        if(s[i]>mean){ high+=s[i]; ch++; }
        else { low+=s[i]; cl++; }
    }
    printf("Average above mean = %.2f\nAverage below mean = %.2f",
           ch?(float)high/ch:0, cl?(float)low/cl:0);
    return 0;
}
