#include <stdio.h>
float avg(float a[], int n){
    float sum = 0;
    for(int i = 0; i < n; i++) sum += a[i];
    return sum / n;
}
int main(){
    float temp[4];
    printf("Enter 4 temperature readings (°C): ");
    for(int i = 0; i < 4; i++) scanf("%f", &temp[i]);
    printf("Average Temperature = %.2f °C", avg(temp, 4));
    return 0;
}
