#include <stdio.h>
float avg(int a[], int n){
    int sum=0;
    for(int i=0;i<n;i++) sum+=a[i];
    return (float)sum/n;
}
int main(){
    int s[5], total=0;
    printf("Enter 5 readings: ");
    for(int i=0;i<5;i++) scanf("%d",&s[i]);
    float mean = avg(s,5);
    for(int i=0;i<5;i++)
        printf("Reading %d contributes %.2f%%\n", i+1, (s[i]/mean)*20);
    printf("Average = %.2f", mean);
    return 0;
}
