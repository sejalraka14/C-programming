#include <stdio.h>
float avg(int arr[], int n) {
    float s = 0;
    for(int i = 0; i < n; i++) s += arr[i];
    return s / n;
}
int main() {
    int light[3];
    printf("Enter 3 light intensity readings (lux): ");
    for(int i = 0; i < 3; i++) scanf("%d", &light[i]);
    printf("Average Light Intensity = %.2f lux", avg(light, 3));
    return 0;
}
